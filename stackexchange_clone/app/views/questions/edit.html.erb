<div class="title">Edit Question</div>

  <%= form_for @question do |f| %>
    <%= f.label :title, class: 'form form_label'%>
    <%= f.text_field :title, class: 'form form_textfield' %>

    <%= f.label :question, class: 'form form_label' %>
    <%= f.text_area :question, class: 'form form_textarea' %>

    <%= f.label :tag, class: 'form form_label' %>
    <%= f.text_field :tag, value: @tags, class: 'form form_textfield' %>

    <%= f.submit "Update Question", class: 'form form_button' %>
  <% end %>

  <%= link_to "Back to Question", question_path(@question.id), class: 'form' %>
</div>
